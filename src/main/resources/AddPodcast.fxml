<DialogPane prefWidth="400.0" style="-fx-border-color: #a6a6a6;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.dii.lsmsdb.myPodcastDB.controller.AddPodcastController">
   <header>
      <VBox>
         <children>
            <HBox>
               <VBox.margin>
                  <Insets bottom="6.0" />
               </VBox.margin>
               <children>
                  <ImageView fitHeight="26.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@img/new.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="-2.0" right="3.0" top="1.0" />
                     </HBox.margin>
                  </ImageView>
                  <Label text="Add new podcast" textFill="#5e5e5e">
                     <font>
                        <Font name="Corbel" size="22.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <Separator prefWidth="200.0" />
         </children>
      </VBox>
   </header>
   <padding>
      <Insets bottom="5.0" left="13.0" right="13.0" top="8.0" />
   </padding>
   <content>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
