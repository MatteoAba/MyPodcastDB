            <TextField maxWidth="-Infinity" prefWidth="240.0" GridPane.rowIndex="1" />
            <TextField maxWidth="-Infinity" prefWidth="240.0" GridPane.rowIndex="3" />
            <TextField maxWidth="-Infinity" prefWidth="240.0" GridPane.rowIndex="5" />
            <TextField maxWidth="-Infinity" prefWidth="240.0" GridPane.rowIndex="7" />
            <VBox minHeight="-Infinity" GridPane.rowIndex="13">
               <children>
                  <ChoiceBox fx:id="choiceBoxCategories" prefWidth="180.0" />
               </children>
            </VBox>
            <ChoiceBox fx:id="choiceBoxCountry" prefWidth="180.0" GridPane.rowIndex="9" />
            <ChoiceBox fx:id="choiceBoxPrimaryCategory" prefWidth="180.0" GridPane.rowIndex="11" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </GridPane>
