               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
            <VBox alignment="CENTER_LEFT" prefHeight="72.0" prefWidth="843.0">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label fx:id="podcastName" onMouseClicked="#onClickReducedPodcast" text="&lt;podcast_name&gt;">
                           <font>
                              <Font name="Corbel Light" size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Label>
                        <VBox fx:id="boxDeletePodcast" alignment="CENTER" visible="false">
                           <children>
                              <ImageView fitHeight="18.0" fitWidth="18.0" onMouseClicked="#deletePodcast" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@img/deleteActor.png" />
                                 </image>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </ImageView>
                           </children>
                           <HBox.margin>
                              <Insets left="6.0" right="1.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                  </HBox>
                  <Label fx:id="podcastCategory" prefHeight="18.0" prefWidth="415.0" text="&lt;category&gt;">
